{
	"type": "module",
	"version": "1.1.2",
	"name": "@mp281x/shared-config",

	"globImports": ["**/src/*.ts"],

	"scripts": {
		"dev": "tsup-node --watch",
		"fix": "./scripts/fix.sh",
		"lint": "./scripts/lint.sh",
		"setup": "./scripts/setup.sh && tsup-node"
	},

	"files": ["./scripts/*", "./dist/*", "./src/tsconfig.json"],

	"bin": {
		"fix": "./scripts/fix.sh",
		"lint": "./scripts/setup.sh",
		"setup": "./scripts/setup.sh"
	},

	"exports": {
		"./prettier": {
			"types": "./dist/prettier.d.ts",
			"import": "./dist/prettier.js"
		},
		"./eslint": {
			"types": "./dist/eslint.d.ts",
			"import": "./dist/eslint.js"
		},
		"./tsconfig": "./src/tsconfig.json"
	},

	"dependencies": {
		"@fsouza/prettierd": "latest",
		"prettier-plugin-svelte": "^3",
		"prettier-plugin-tailwindcss": "^0",

		"eslint": "^9",
		"@eslint/js": "^9",
		"typescript-eslint": "^7",
		"eslint-plugin-react": "^7",
		"eslint-plugin-svelte": "^2",
		"eslint-plugin-unicorn": "^53",
		"eslint-config-prettier": "^9",
		"eslint-plugin-tailwindcss": "^3",
		"eslint-plugin-perfectionist": "^2",
		"eslint-plugin-react-hooks": "beta",
		"@next/eslint-plugin-next": "canary"
	},

	"devDependencies": {
		"typescript": "^5",

		"tsup": "^8",
		"prettier": "^3",
		"@types/node": "^20"
	},

	"pnpm": { "peerDependencyRules": { "allowedVersions": { "eslint": "*" } } }
}
