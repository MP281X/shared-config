{
	"type": "module",
	"version": "1.0.4",
	"name": "@mp281x/shared-config",

	"globImports": ["**/src/*.ts"],

	"scripts": {
		"dev": "tsup-node --watch",
		"fix": "./dist/task-runner.js --fix",
		"test": "./dist/task-runner.js --test",
		"check": "./dist/task-runner.js --check --test"
	},

	"files": ["./dist/*", "./src/tsconfig.json"],
	"bin": { "task-runner": "./dist/task-runner.js" },

	"exports": {
		"./prettier": {
			"types": "./dist/prettier.d.ts",
			"import": "./dist/prettier.js"
		},
		"./eslint": {
			"types": "./dist/eslint.d.ts",
			"import": "./dist/eslint.js"
		},
		"./vitest": {
			"types": "./dist/vitest.d.ts",
			"import": "./dist/vitest.js"
		},
		"./tsconfig": "./src/tsconfig.json"
	},

	"dependencies": {
		"@fsouza/prettierd": "latest",
		"prettier-plugin-astro": "0.13.0",
		"prettier-plugin-svelte": "3.2.3",
		"prettier-plugin-tailwindcss": "0.5.14",

		"eslint": "9.2.0",
		"@eslint/js": "9.2.0",
		"typescript-eslint": "7.8.0",
		"eslint-plugin-svelte": "2.39.0",
		"eslint-plugin-unicorn": "53.0.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-perfectionist": "2.10.0"
	},

	"peerDependencies": { "vitest": "^1.6.0", "typescript": "^5.4.5" },
	"peerDependenciesMeta": { "vitest": { "optional": true } },

	"devDependencies": {
		"tsup": "8.0.2",
		"yaml": "2.4.2",
		"chokidar": "3.6.0",
		"prettier": "3.2.5",
		"@types/node": "20.12.11"
	},

	"pnpm": { "peerDependencyRules": { "allowedVersions": { "eslint": "*", "svelte-eslint-parser": "*" } } }
}
