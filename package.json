{
	"type": "module",
	"name": "@mp281x/shared-config",

	"scripts": {
		"dev": "tsup-node --watch",
		"fix": "tsup-node && ./scripts/fix.sh",
		"lint": "tsup-node && ./scripts/lint.sh",
		"setup": "./scripts/setup.sh && tsup-node"
	},

	"files": ["./scripts/*", "./dist/*", "./configs/tsconfig.json", "./configs/types.d.ts"],

	"bin": {
		"x": "./dist/src/index.js",
		"shared-config-fix": "./scripts/fix.sh",
		"shared-config-lint": "./scripts/lint.sh",
		"shared-config-setup": "./scripts/setup.sh"
	},

	"exports": {
		"./prettier": {
			"types": "./dist/configs/prettier.d.ts",
			"import": "./dist/configs/prettier.js"
		},
		"./eslint": {
			"types": "./dist/configs/eslint.d.ts",
			"import": "./dist/configs/eslint.js"
		},
		"./tsconfig": "./configs/tsconfig.json"
	},

	"dependencies": {
		"@fsouza/prettierd": "latest",
		"prettier-plugin-svelte": "^3",
		"prettier-plugin-tailwindcss": "^0",

		"eslint": "^9",
		"@eslint/js": "^9",
		"typescript-eslint": "rc-v8",
		"eslint-plugin-react": "^7",
		"eslint-plugin-solid": "^0",
		"eslint-plugin-svelte": "^2",
		"eslint-plugin-unicorn": "^53",
		"eslint-config-prettier": "^9",
		"@next/eslint-plugin-next": "rc",
		"eslint-plugin-tailwindcss": "^3",
		"eslint-plugin-react-hooks": "beta",
		"eslint-plugin-perfectionist": "^2",
		"eslint-plugin-react-compiler": "latest",
		"eslint-plugin-react-prefer-function-component": "^3"
	},

	"devDependencies": {
		"typescript": "^5",

		"tsup": "^8",
		"prettier": "^3",
		"@types/node": "^20"
	},

	"pnpm": { "peerDependencyRules": { "allowedVersions": { "eslint": "*" } } }
}
