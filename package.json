{
	"type": "module",
	"version": "1.1.0",
	"name": "@mp281x/shared-config",

	"globImports": ["**/src/*.ts"],

	"scripts": {
		"dev": "tsup-node --watch",
		"fix": "sh ./scripts/fix.sh",
		"lint": "sh ./scripts/lint.sh",
		"setup": "sh ./scripts/setup.sh && tsup-node"
	},

	"files": ["./scripts/*", "./dist/*", "./src/tsconfig.json"],

	"bin": {
		"fix": "sh ./scripts/fix.sh",
		"lint": "sh ./scripts/setup.sh",
		"setup": "sh ./scripts/setup.sh"
	},

	"exports": {
		"./prettier": {
			"types": "./dist/prettier.d.ts",
			"import": "./dist/prettier.js"
		},
		"./eslint": {
			"types": "./dist/eslint.d.ts",
			"import": "./dist/eslint.js"
		},
		"./tsconfig": "./src/tsconfig.json"
	},

	"dependencies": {
		"@fsouza/prettierd": "latest",
		"prettier-plugin-svelte": "3.2.3",
		"prettier-plugin-tailwindcss": "0.5.14",

		"eslint": "9.3.0",
		"@eslint/js": "9.3.0",
		"typescript-eslint": "7.9.0",
		"eslint-plugin-react": "7.34.1",
		"eslint-plugin-svelte": "2.39.0",
		"eslint-plugin-unicorn": "53.0.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-react-hooks": "beta",
		"@next/eslint-plugin-next": "14.2.3",
		"eslint-plugin-tailwindcss": "3.15.2",
		"eslint-plugin-perfectionist": "2.10.0"
	},

	"devDependencies": {
		"typescript": "5.4.5",

		"tsup": "8.0.2",
		"prettier": "3.2.5",
		"@types/node": "20.12.12"
	},

	"pnpm": { "peerDependencyRules": { "allowedVersions": { "eslint": "*" } } }
}
